
<form action="/" method="post">
  <button type="submit">Check current macbooks</button>
</form>
<p>this can take a little while as it searches over 100 web pages</p>


<% if @macs.any? %>
  <h2>Macbooks:</h2>
    <table class="table table-striped table-info">
      <thead>
        <tr>
          <th>Title</th>
          <th>Price</th>
          <th>Link</th>
          <th>Location</th>
          <th>Condition</th>
          <th>Model</th>
          <th>Posted</th>
          <th>Description</th>
        </tr>
      </thead>
    </tbody>
      <% @macs.each do |mac| %>
        <tr>
          <td><%= mac[:title] %></td>
          <td>$<%= mac[:price] %></td>
          <td><a href="<%= mac[:link] %>">Link</td>
          <td><%= mac[:location] %></td>
          <td><%= mac[:condition] %></td>
          <td><%= mac[:model] %></td>
          <td><p>To Be Addded</p></td>
          <td><%= mac[:description] %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <%else%>
    <h2>Currently no Macbooks</h2>
  <%end%>
