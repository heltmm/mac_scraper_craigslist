
<% if @macs.any? %>
  <h2>Macbooks:</h2>
  <table class="table table-striped table-info">
    <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Link</th>
        <th>Description</th>
        <th>Condition</th>
        <th>Model</th>
        <th>Posted</th>
        <th>Location</th>
      </tr>
    </thead>
    <tbody>
      <% @macs.each do |mac| %>
        <tr>
          <td><%= mac[:title] %></td>
          <td>$<%= mac[:price] %></td>
          <td><a href="<%= mac[:link] %>">Link</td>
          <td>
            <% if mac[:description].length > 100 %>
              <%= mac[:description][0..99] + "..." %>
            <% else %>
              <%= mac[:description] %>
            <% end %>
          </td>
          <td><%= mac[:condition] %></td>
          <td><%= mac[:model] %></td>
          <td><%= mac[:date_posted]%></td>
          <td><%= mac[:address] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%else%>
  <h2>Currently no Macbooks</h2>
  <h2>Head over to <a href='/search'>search</a> to update the database</h2>
<%end%>
